#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

if ARCH_CHIP_QEMU_LA
comment "QEMU LA Options"

choice
	prompt "QEMU Chip Selection"
	default ARCH_CHIP_QEMU_LA64

config ARCH_CHIP_QEMU_LA32
	bool "QEMU LA32"
	select ARCH_LA32

config ARCH_CHIP_QEMU_LA64
	bool "QEMU LA64"
	select ARCH_LA64

endchoice

config ARCH_CHIP_QEMU_LA_ISA_LBT
    bool "Standard Extension for Loongson Binary Translation Instructions"
    default n
    select ARCH_LA_ISA_LBT

config ARCH_CHIP_QEMU_LA_ISA_LSX
    bool "Standard Extension for Loongson SIMD Instructions"
    default n
    select ARCH_LA_ISA_LSX

config ARCH_CHIP_QEMU_LA_ISA_LASX
    bool "Standard Extension for Loongson Advanced SIMD Instructions"
    default n
    select ARCH_LA_ISA_LASX

config ARCH_CHIP_QEMU_LA_ISA_LVZ
    bool "Standard Extension for Loongson Virtualization Instructions"
    default n
    select ARCH_LA_ISA_LVZ

endif
